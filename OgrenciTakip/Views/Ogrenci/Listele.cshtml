@{
}
@model List<OgrenciModel>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Okul No</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Sınıfı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var talebe in Model)
        {
            <tr>
                <th scope="row">@talebe.OgrenciNo</th>
                <td>@talebe.Adi</td>
                <td>@talebe.SoyAdi</td>
                <td>@talebe.Sinifi</td>
            </tr>
        }
    </tbody>
</table>
